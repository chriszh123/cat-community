.main .post {
    width: 80rpx;
    height: 80rpx;
    position: fixed;
    right: 60rpx;
    bottom: 30px;
    z-index: 1000;
}

.main .list {
    padding-top: 20rpx;
}

.main .list .item {
    padding: 10rpx;
    margin: 0rpx;
    position: relative;
}

.main .list .item .item-ask {
    padding: 10rpx 20rpx;
    font-size: 32rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background-color: rgba(255, 255, 255, 0.8);
    line-height: 2;
}

.main .list .item .item-ask .ask {
    margin-left: 15rpx;
    font-size: 35rpx;
}

.main .list .item .item-ask .icon {
    width: 29rpx;
    height: 29rpx;
}

.main .list .item .item-answer {
    padding: 10rpx 20rpx;
    font-size: 32rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background-color: rgba(255, 255, 255, 0.8);
    line-height: 2;
}

.main .list .item .item-answer .answer {
    margin-left: 15rpx;
    font-size: 35rpx;
}

.main .list .item .item-answer .icon {
    width: 29rpx;
    height: 29rpx;
}

.main .list .item .menu {
    right: 10rpx;
    bottom: 10rpx;
    position: absolute;
}

.main .list .item .menu .menu-item {
    float: left;
    color: #8a8a8a;
    margin: 10rpx;
}

.main .list .item .menu .menu-item image {
    width: 26rpx;
    height: 26rpx;
}

.main .list .item .menu .menu-item text {
    margin-left: 10rpx;
}